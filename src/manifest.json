{
	"name": "EHTip",
	"version": "0.2.0",
	"update_url": "http://bender.fesb.hr/~robert/ehtip/crx/update.xml",
	"permissions": [
		"tabs",
		"unlimitedStorage"
	],
	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png"
	},
	"background_page": "bg.html",
	"options_page": "options.html",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["base.js", "shapes.js", "content.js"],
			"all_frames": true
		}
	]
}
